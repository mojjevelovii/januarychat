
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.ListView?>
<VBox fx:controller="com.geekbrains.chat.client.Controller" xmlns:fx="http://javafx.com/fxml">
    <HBox fx:id="loginBox">
        <TextField fx:id="loginField" promptText="Логин" HBox.hgrow="ALWAYS">
            <font>
                <Font name="System" size="16"/>
            </font>
        </TextField>
        <PasswordField fx:id="passField" promptText="Пароль" onAction="#tryToAuth" HBox.hgrow="ALWAYS">
            <font>
                <Font name="System" size="16"/>
            </font>
        </PasswordField>
        <Button HBox.hgrow="ALWAYS" text="Войти" maxWidth="100" onAction="#tryToAuth">
            <font>
                <Font name="System" size="16"/>
            </font>
        </Button>
    </HBox>
    <HBox VBox.vgrow="ALWAYS">
        <TextArea fx:id="textArea" editable="false" HBox.hgrow="ALWAYS">
            <font>
                <Font name="System" size="16"/>
            </font>
        </TextArea>
        <ListView fx:id="clientsList" maxWidth="200" minWidth="200"/>
    </HBox>

    <TextField fx:id="msgField" onAction="#sendMsg">
        <font>
            <Font name="System" size="16"/>
        </font>
    </TextField>
</VBox>